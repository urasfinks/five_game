{
  "flutterType": "Column",
  "crossAxisAlignment": "start",
  "children": [
    {
      "flutterType": "Row",
      "children": [
        {
          "flutterType": "Expanded",
          "child": {
            "flutterType": "SelectSheet",
            "state": "groupWord",
            "stateKey": "groupWord",
            "onStateDataUpdate": true,
            "extend": true,
            "onStateDataUpdateKey": "groupWord",
            "selectedLabel": "${state(main,groupWordLabel,Стандартный набор)}",
            "children": [
              {
                "ChildrenExtension": "Iterator",
                "dataType": "state",
                "state": "availableGroupWord",
                "key": "listOptions"
              }
            ],
            "onNew": {
              "jsRouter": "SecretConnections/GameWord.ai.js",
              "args": {
                "method": "addNewGroupWord"
              }
            },
            "onChange": {
              "jsRouter": "SecretConnections/GameWord.ai.js",
              "args": {
                "method": "onChangeGroupWord"
              }
            },
            "compileTemplateList": [
              "selectedLabel"
            ]
          }
        },
        {
          "flutterType": "Visibility",
          "visible": "${state(groupWord,groupWord.isMy,false)}",
          "child": {
            "flutterType": "Padding",
            "padding": "10,0,0,0",
            "child": {
              "flutterType": "Row",
              "children": [
                {
                  "flutterType": "RawMaterialButton",
                  "fillColor": "schema:projectPrimary",
                  "padding": 10,
                  "onPressed": {
                    "jsRouter": "SecretConnections/GameWord.ai.js",
                    "args": {
                      "method": "onEdit"
                    }
                  },
                  "child": {
                    "flutterType": "Icon",
                    "src": "edit",
                    "color": "white",
                    "size": 20
                  }
                },
                {
                  "flutterType": "SizedBox",
                  "width": 7
                },
                {
                  "flutterType": "RawMaterialButton",
                  "fillColor": "red",
                  "padding": 10,
                  "onPressed": {
                    "sysInvoke": "Alert",
                    "args": {
                      "confirmRemove": true,
                      "backgroundColor": "schema:onBackground",
                      "onPressed": {
                        "jsRouter": "SecretConnections/GameWord.ai.js",
                        "args": {
                          "method": "removeGroupWord"
                        }
                      }
                    }
                  },
                  "child": {
                    "flutterType": "Icon",
                    "src": "delete_outline",
                    "color": "white",
                    "size": 20
                  }
                }
              ]
            }
          }
        }
      ]
    },
    {
      "flutterType": "SizedBox",
      "height": 20
    },
    {
      "flutterType": "State",
      "key": "gridWord"
    },
    {
      "flutterType": "SizedBox",
      "height": 20
    },
    {
      "flutterType": "Visibility",
      "visible": "${state(main,isOwner,false)}",
      "child": {
        "flutterType": "Button",
        "height": 44,
        "backgroundColor": "blue",
        "onPressed": {
          "jsRouter": "SecretConnections/GameWord.ai.js",
          "args": {
            "includeAll": true,
            "method": "generateWord"
          }
        },
        "child": {
          "flutterType": "Icon",
          "color": "white",
          "src": "sync",
          "size": 22
        },
        "_child": {
          "flutterType": "Text",
          "label": "Сгенерировать карточки",
          "style": {
            "flutterType": "TextStyle",
            "fontSize": 14,
            "color": "white"
          }
        }
      }
    },
    {
      "flutterType": "SizedBox",
      "height": 20
    },
    {
      "flutterType": "Visibility",
      "visible": "${state(main,toNextRun,false)}",
      "child": {
        "flutterType": "Button",
        "height": 44,
        "backgroundColor": "blue",
        "onPressed": {
          "jsRouter": "SecretConnections/Game.ai.js",
          "args": {
            "includeAll": true,
            "method": "changeGameState",
            "gameState": "run"
          }
        },
        "child": {
          "flutterType": "Text",
          "label": "Начать игру",
          "style": {
            "flutterType": "TextStyle",
            "fontSize": 14,
            "color": "white"
          }
        }
      }
    }
  ]
}
