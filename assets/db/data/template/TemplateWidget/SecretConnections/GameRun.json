{
  "flutterType": "Column",
  "crossAxisAlignment": "start",
  "children": [
    {
      "flutterType": "Padding",
      "padding": "5,0,5,0",
      "child": {
        "flutterType": "Row",
        "children": [
          {
            "flutterType": "Text",
            "label": "Ход:"
          },
          {
            "flutterType": "SizedBox",
            "width": 10
          },
          {
            "flutterType": "Container",
            "padding": "10,5,10,5",
            "decoration": {
              "flutterType": "BoxDecoration",
              "color": "${state(main,originSocketData.runTeam)}",
              "borderRadius": 9
            },
            "child": {
              "flutterType": "Text",
              "label": "${state(main,originSocketData.runTeam)|map(blue,СИНИХ,red,КРАСНЫХ)}",
              "style": {
                "flutterType": "TextStyle",
                "fontSize": 12,
                "fontWeight": "bold",
                "color": "white"
              }
            }
          },
          {
            "flutterType": "Expanded",
            "child": {
              "flutterType": "Stream",
              "stream": {
                "case": "Periodic",
                "timerMillis": 1000,
                "data": {
                  "count": 0
                }
              },
              "child": {
                "flutterType": "Center",
                "child": {
                  "flutterType": "Text",
                  "label": "${state(main,originSocketData.session)|timeSoFar(sec)}"
                }
              }
            }
          },
          {
            "flutterType": "Text",
            "label": "Счёт:"
          },
          {
            "flutterType": "SizedBox",
            "width": 10
          },
          {
            "flutterType": "Container",
            "padding": "10,5,10,5",
            "decoration": {
              "flutterType": "BoxDecoration",
              "color": "red",
              "borderRadius": 9
            },
            "child": {
              "flutterType": "Text",
              "label": "${state(main,scoreRed)}/${state(main,allRed)}",
              "style": {
                "flutterType": "TextStyle",
                "fontSize": 12,
                "fontWeight": "bold",
                "color": "white"
              }
            }
          },
          {
            "flutterType": "SizedBox",
            "width": 10
          },
          {
            "flutterType": "Container",
            "padding": "10,5,10,5",
            "decoration": {
              "flutterType": "BoxDecoration",
              "color": "blue",
              "borderRadius": 9
            },
            "child": {
              "flutterType": "Text",
              "label": "${state(main,scoreBlue)}/${state(main,allBlue)}",
              "style": {
                "flutterType": "TextStyle",
                "fontSize": 12,
                "fontWeight": "bold",
                "color": "white"
              }
            }
          }
        ]
      }
    },
    {
      "flutterType": "SizedBox",
      "height": 20
    },
    {
      "flutterType": "State",
      "key": "gridWord"
    },
    {
      "flutterType": "SizedBox",
      "height": 20
    },
    {
      "flutterType": "Padding",
      "padding": "5,0,5,0",
      "child": {
        "flutterType": "Visibility",
        "visible": "${state(main,toNextTeam, false)}",
        "child": {
          "flutterType": "Button",
          "height": 44,
          "width": "infinity",
          "backgroundColor": "${state(main,originSocketData.runTeam, false)}",
          "onPressed": {
            "sysInvoke": "Alert",
            "args": {
              "confirmAction": true,
              "label": "Все выделенные слова будут сброшены и ход перейдёт другой команде. Если хотите подтвердить выбор слова, используйте долгое нажатие на карточку",
              "onPressed": {
                "jsRouter": "SecretConnections/GameRun.ai.js",
                "args": {
                  "method": "toNextTeam"
                }
              }
            }
          },
          "child": {
            "flutterType": "Text",
            "label": "Передать игру следующей команде",
            "style": {
              "flutterType": "TextStyle",
              "fontSize": 14,
              "color": "white"
            }
          }
        }
      }
    },
    {
      "flutterType": "Padding",
      "padding": "5,20,5,0",
      "child": {
        "flutterType": "Row",
        "crossAxisAlignment": "start",
        "children": [
          {
            "flutterType": "Expanded",
            "child": {
              "flutterType": "Container",
              "padding": "10,5,10,5",
              "decoration": {
                "flutterType": "BoxDecoration",
                "color": "schema:onBackground",
                "borderRadius": 9
              },
              "child": {
                "flutterType": "Text",
                "label": "Красные:\n\n${state(main,users.red)}",
                "style": {
                  "flutterType": "TextStyle",
                  "fontSize": 12,
                  "fontWeight": "bold",
                  "color": "schema:secondary"
                }
              }
            }
          },
          {
            "flutterType": "SizedBox",
            "width": 20
          },
          {
            "flutterType": "Expanded",
            "child": {
              "flutterType": "Container",
              "padding": "10,5,10,5",
              "decoration": {
                "flutterType": "BoxDecoration",
                "color": "schema:onBackground",
                "borderRadius": 9
              },
              "child": {
                "flutterType": "Text",
                "label": "Синие:\n\n${state(main,users.blue)}",
                "style": {
                  "flutterType": "TextStyle",
                  "fontSize": 12,
                  "fontWeight": "bold",
                  "color": "schema:secondary"
                }
              }
            }
          }
        ]
      }
    }
  ]
}