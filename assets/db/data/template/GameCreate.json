{
  "flutterType": "Scaffold",
  "body": {
    "flutterType": "CustomScrollView",
    "onStateDataUpdate": true,
    "appBar": {
      "flutterType": "SliverAppBar",
      "title": {
        "flutterType": "Text",
        "label": "Создать игру",
        "style": {
          "flutterType": "TextStyle",
          "fontSize": 17
        }
      }
    },
    "children": [
      {
        "flutterType": "Padding",
        "padding": 20,
        "child": {
          "flutterType": "Text",
          "textAlign": "center",
          "label": "Код для подключения к игре для других участников, либо телевизора:"
        }
      },
      {
        "flutterType": "Container",
        "alignment": "center",
        "padding": 20,
        "child": {
          "flutterType": "Text",
          "label": "${state(main,gameCode,Загрузка...)}",
          "style": {
            "flutterType": "TextStyle",
            "fontSize": 48,
            "fontWeight": "bold"
          }
        }
      },
      {
        "flutterType": "Padding",
        "padding": "20,20,20,10",
        "child": {
          "flutterType": "Text",
          "textAlign": "center",
          "label": "Поделиться ссылкой для подключния к игре"
        }
      },
      {
        "flutterType": "Padding",
        "padding": 20,
        "child": {
          "flutterType": "Button",
          "minimumSize": "9999,44",
          "backgroundColor": "schema:onBackground",
          "height": 44,
          "onPressed": {
            "sysInvoke": "Share",
            "args": {
              "data": "${globalSettings(host,)}/deeplink/${globalSettings(version,)}/ConnectCodeNames/code/${state(main,gameCode,undefined)}",
              "templateArguments": [
                "data"
              ]
            }
          },
          "child": {
            "flutterType": "Text",
            "label": "Поделиться ссылкой на игру",
            "style": {
              "flutterType": "TextStyle",
              "fontSize": 14,
              "color": "schema:inversePrimary"
            }
          }
        }
      },
      {
        "flutterType": "Padding",
        "padding": "20,0,20,0",
        "child": {
          "flutterType": "Button",
          "minimumSize": "9999,44",
          "backgroundColor": "blue",
          "height": 44,
          "onPressed": {
            "sysInvoke": "NavigatorPush",
            "args": {
              "uuid": "Game.json",
              "socket": true,
              "socketUuid": "bdc67a1c-ec5e-4709-b96c-5b94a96e8c19",
              "subscribeOnChangeUuid": ["bdc67a1c-ec5e-4709-b96c-5b94a96e8c19"],
              "onChangeUuid": {
                "jsInvoke": "Game.js",
                "args": {
                  "includeStateData": true,
                  "includePageArgument": true,
                  "switch": "onChange"
                }
              },
              "onChangeOrientation": {
                "jsInvoke": "Game.js",
                "args": {
                  "includeStateData": true,
                  "includePageArgument": true,
                  "switch": "onChangeOrientation"
                }
              },
              "destructor": {
                "jsInvoke": "Game.js",
                "args": {
                  "switch": "destructor"
                }
              },
              "onActive": {
                "jsInvoke": "Game.js",
                "args": {
                  "includeStateData": true,
                  "includePageArgument": true,
                  "switch": "onChangeOrientation"
                }
              },
              "constructor": {
                "jsInvoke": "Game.js",
                "args": {
                  "includeStateData": true,
                  "switch": "constructor"
                }
              }
            }
          },
          "child": {
            "flutterType": "Text",
            "label": "Начать игру",
            "style": {
              "flutterType": "TextStyle",
              "fontSize": 14,
              "color": "white"
            }
          }
        }
      }
    ]
  }
}