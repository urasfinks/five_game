{
  "flutterType": "Column",
  "crossAxisAlignment": "start",
  "children": [
    {
      "flutterType": "SelectSheet",
      "state": "groupWord",
      "stateKey": "groupWord",
      "selectedIndex": 0,
      "children": [
        {
          "label": "Группа 1"
        },
        {
          "label": "Группа 2"
        },
        {
          "label": "Группа 3"
        }
      ]
    },
    {
      "flutterType": "SizedBox",
      "height": 20
    },
    {
      "flutterType": "State",
      "key": "gridWord"
    },
    {
      "flutterType": "SizedBox",
      "height": 20
    },
    {
      "flutterType": "Visibility",
      "visible": "${state(main,isOwner,false)}",
      "child": {
        "flutterType": "Button",
        "height": 44,
        "backgroundColor": "blue",
        "onPressed": {
          "jsRouter": "SecretConnections/GameWord.ai.js",
          "args": {
            "includeAll": true,
            "method": "generateWord"
          }
        },
        "child": {
          "flutterType": "Text",
          "label": "Сгенерировать карточки",
          "style": {
            "flutterType": "TextStyle",
            "fontSize": 14,
            "color": "white"
          }
        }
      }
    },
    {
      "flutterType": "SizedBox",
      "height": 20
    },
    {
      "flutterType": "Visibility",
      "visible": "${state(main,toNextRun,false)}",
      "child": {
        "flutterType": "Button",
        "height": 44,
        "backgroundColor": "blue",
        "onPressed": {
          "jsRouter": "SecretConnections/Game.ai.js",
          "args": {
            "includeAll": true,
            "method": "changeGameState",
            "gameState": "run"
          }
        },
        "child": {
          "flutterType": "Text",
          "label": "Начать игру",
          "style": {
            "flutterType": "TextStyle",
            "fontSize": 14,
            "color": "white"
          }
        }
      }
    }
  ]
}
